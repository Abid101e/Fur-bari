{
  "info": {
    "name": "Fur-Bari Backend API",
    "description": "Complete API collection for Fur-Bari pet adoption platform",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "apiUrl",
      "value": "http://localhost:5000/api/v1",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "postId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Endpoint",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Root API Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.tokens) {",
                  "        pm.collectionVariables.set('accessToken', jsonData.data.tokens.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', jsonData.data.tokens.refreshToken);",
                  "    }",
                  "    if (jsonData.data && jsonData.data.user) {",
                  "        pm.collectionVariables.set('userId', jsonData.data.user.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User {{$randomInt}}\",\n  \"email\": \"testuser{{$randomInt}}@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"phone\": \"+1234567890\",\n  \"location\": {\n    \"address\": \"123 Main St\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zipCode\": \"10001\",\n    \"coordinates\": {\n      \"latitude\": 40.7128,\n      \"longitude\": -74.0060\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/auth/register",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.tokens) {",
                  "        pm.collectionVariables.set('accessToken', jsonData.data.tokens.accessToken);",
                  "        pm.collectionVariables.set('refreshToken', jsonData.data.tokens.refreshToken);",
                  "    }",
                  "    if (jsonData.data && jsonData.data.user) {",
                  "        pm.collectionVariables.set('userId', jsonData.data.user.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser{{$randomInt}}@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/auth/login",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/auth/me",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/auth/refresh",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/auth/logout",
              "host": ["{{apiUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/users/me",
              "host": ["{{apiUrl}}"],
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "Update My Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Updated\",\n  \"bio\": \"Pet lover and animal advocate\",\n  \"location\": {\n    \"address\": \"456 Pet Street\",\n    \"city\": \"Los Angeles\",\n    \"state\": \"CA\",\n    \"zipCode\": \"90210\"\n  },\n  \"preferences\": {\n    \"emailNotifications\": true,\n    \"smsNotifications\": false,\n    \"newsletter\": true\n  }\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/users/me",
              "host": ["{{apiUrl}}"],
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"SecurePass123!\",\n  \"newPassword\": \"NewSecurePass456!\"\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/users/change-password",
              "host": ["{{apiUrl}}"],
              "path": ["users", "change-password"]
            }
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Create Pet Post",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.post) {",
                  "        pm.collectionVariables.set('postId', jsonData.data.post._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Adorable Golden Retriever Looking for Home\",\n  \"description\": \"Max is a 2-year-old golden retriever who loves playing fetch and cuddling.\",\n  \"pet\": {\n    \"name\": \"Max\",\n    \"species\": \"dog\",\n    \"breed\": \"Golden Retriever\",\n    \"age\": 2,\n    \"gender\": \"male\",\n    \"size\": \"large\",\n    \"color\": \"golden\",\n    \"isVaccinated\": true,\n    \"isNeutered\": true,\n    \"healthStatus\": \"excellent\",\n    \"temperament\": [\"friendly\", \"playful\", \"gentle\"],\n    \"goodWith\": [\"children\", \"other-dogs\"],\n    \"specialNeeds\": []\n  },\n  \"location\": {\n    \"address\": \"123 Pet Shelter Ave\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"zipCode\": \"10001\"\n  },\n  \"requirements\": {\n    \"hasYard\": true,\n    \"hasExperience\": false,\n    \"hasOtherPets\": false,\n    \"maxHoursAlone\": 6\n  },\n  \"contact\": {\n    \"method\": \"email\",\n    \"value\": \"contact@shelter.com\"\n  }\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/posts",
              "host": ["{{apiUrl}}"],
              "path": ["posts"]
            }
          }
        },
        {
          "name": "Get All Posts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{apiUrl}}/posts?limit=10&page=1",
              "host": ["{{apiUrl}}"],
              "path": ["posts"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "page",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Post by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{apiUrl}}/posts/{{postId}}",
              "host": ["{{apiUrl}}"],
              "path": ["posts", "{{postId}}"]
            }
          }
        },
        {
          "name": "Get My Posts",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/posts/my-posts",
              "host": ["{{apiUrl}}"],
              "path": ["posts", "my-posts"]
            }
          }
        },
        {
          "name": "Toggle Favorite",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/posts/{{postId}}/favorite",
              "host": ["{{apiUrl}}"],
              "path": ["posts", "{{postId}}", "favorite"]
            }
          }
        },
        {
          "name": "Get My Favorites",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/posts/favorites",
              "host": ["{{apiUrl}}"],
              "path": ["posts", "favorites"]
            }
          }
        }
      ]
    },
    {
      "name": "Interests (Applications)",
      "item": [
        {
          "name": "Create Application",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"postId\": \"{{postId}}\",\n  \"message\": \"I would love to adopt Max! I have experience with dogs and a big yard.\",\n  \"applicantInfo\": {\n    \"livingArrangement\": \"house\",\n    \"hasYard\": true,\n    \"hasExperience\": true,\n    \"hasOtherPets\": false,\n    \"hoursAlonePerDay\": 4,\n    \"reasonForAdoption\": \"Looking for a loyal companion for my family\"\n  }\n}"
            },
            "url": {
              "raw": "{{apiUrl}}/interests",
              "host": ["{{apiUrl}}"],
              "path": ["interests"]
            }
          }
        },
        {
          "name": "Get My Applications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/interests/my-interests",
              "host": ["{{apiUrl}}"],
              "path": ["interests", "my-interests"]
            }
          }
        },
        {
          "name": "Get Applications for Post",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{apiUrl}}/interests/post/{{postId}}",
              "host": ["{{apiUrl}}"],
              "path": ["interests", "post", "{{postId}}"]
            }
          }
        }
      ]
    }
  ]
}
